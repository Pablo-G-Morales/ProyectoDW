<!-- views/register.ejs -->
<!DOCTYPE html>
<html lang="es">
<head>
  <link rel="icon" type="image/x-icon" href="https://cdn.icon-icons.com/icons2/272/PNG/512/Camera_30015.png">
  <%- include("partials/head") %>
  <title>Registro de Usuario</title>
</head>
<body>
  <%- include("partials/navigation") %>
  <div class="container mt-5">
    <h1>Registro de Usuario</h1>
    
    <!-- Mostrar mensajes de error -->
    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger">
        <% errors.forEach(function(error) { %>
          <p><%= error.text %></p>
        <% }) %>
      </div>
    <% } %>
    
    <!-- Mostrar mensajes flash -->
    <% if (success_msg) { %>
      <div class="alert alert-success">
        <p><%= success_msg %></p>
      </div>
    <% } %>
    <% if (error_msg) { %>
      <div class="alert alert-danger">
        <p><%= error_msg %></p>
      </div>
    <% } %>

    <form action="/users/register" method="POST">
      <div class="form-group">
        <label>Nombre de Usuario</label>
        <input type="text" name="username" class="form-control" value="<%= typeof username != 'undefined' ? username : '' %>" required>
      </div>
      <div class="form-group">
        <label>Correo Electrónico</label>
        <input type="email" name="email" class="form-control" value="<%= typeof email != 'undefined' ? email : '' %>" required>
      </div>
      <div class="form-group">
        <label>Contraseña</label>
        <input type="password" name="password" class="form-control" required>
      </div>
      <div class="form-group">
        <label>Confirmar Contraseña</label>
        <input type="password" name="confirm_password" class="form-control" required>
      </div>
      <button type="submit" class="btn btn-primary mt-3">Registrarse</button>
    </form>

    <p class="mt-3">¿Ya tienes una cuenta? <a href="/users/login">Inicia sesión aquí</a>.</p>
  </div>
</body>
</html>
