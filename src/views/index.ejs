<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pick-Card</title>
    <link rel="icon" type="image/x-icon" href="https://cdn.icon-icons.com/icons2/272/PNG/512/Camera_30015.png">
    <%- include("partials/head") %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.2.1/dist/css/bootstrap.min.css" 
    integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" 
    integrity="sha512-c42qTSw/wPZ3/5LBzD+Bw5f7bSF2oxou6wEb+I/lqeaKV5FDIfMvvRp772y4jcJLKuGUOpbJMdg/BTl50fJYAw==" 
    crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>

    <%- include("partials/navigation") %>

    <div class="container mt-4"> 
        <!-- Buscador -->
        <div class="row mb-4">
            <div class="col-md-6 offset-md-3">
                <form class="d-flex" action="/search" method="GET">
                    <input class="form-control me-2" 
                           type="search" 
                           placeholder="Buscar" 
                           aria-label="Buscar" 
                           name="query" 
                           value="<%= typeof query !== 'undefined' ? query : '' %>">
                    <button class="btn btn-outline-light" type="submit">Buscar</button>
                </form>                
            </div>
        </div>

        <!-- Galería de imágenes -->
        <div class="row">
            <div class="card-columns">
                <% images.forEach(function(image) { %>
                    <div class="card animated fadeInDown">
                        <img src="<%= image.path %>" class="card-img-top" alt="<%= image.filename %>">
                        <div class="card-body">
                            <h5 class="card-title"><%= image.title %></h5>
                            <p class="card-text"><%= image.description %></p>
                            <p class="card-text"><small class="text-muted">Publicado hace <%= format(image.created_at) %></small></p>
                            <!-- Enlace actualizado a la vista `imageProfile` -->
                            <a href="/image/<%= image._id %>" class="btn btn-success">Ver Imagen</a>
                        </div>
                    </div> 
                <% }) %>
            </div>
        </div>
    </div>

</body>
</html>
